@page "/"
@inherits QuizTime.Client.BlazorWasm.Shared.UI.StateComponentBase

@using QuizTime.Client.BlazorWasm.Features.Game
@using QuizTime.Client.BlazorWasm.Features.Start
@using QuizTime.Client.BlazorWasm.Features.Play
@using QuizTime.Client.BlazorWasm.Features.NewGame
@using QuizTime.Client.BlazorWasm.Shared.UI

<MainContainer>

    @switch (State.Mode)
    {
        case GameMode.Start:
            <Start />
            break;
        case GameMode.Play:
            <Play />
            break;
        case GameMode.NewGame:
            <NewGame />
            break;
        default:
            <Start />
            break;
    }

</MainContainer>

