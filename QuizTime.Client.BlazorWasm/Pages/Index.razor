@page "/"
@inherits SettingsStateComponentBase
@using QuizTime.Features.Settings
@using QuizTime.Features.Game
@using QuizTime.Features.Start
@using QuizTime.Features.Play
@using QuizTime.Features.NewGame
@using QuizTime.Shared.UI

<MainContainer>

    @switch (State.Mode)
    {
        case GameMode.Start:
            <Start />
            break;
        case GameMode.Play:
            <Play />
            break;
        case GameMode.NewGame:
            <NewGame />
            break;
        default:
            <Start />
            break;
    }

</MainContainer>

@code
{
    private GameState State => GetState<GameState>();

}