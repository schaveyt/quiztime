@using QuizTime.Features.Settings
@inherits BlazorStateComponent
<div class="bg-@(SettingsState.ThemeColorString)-500 text-white py-3 flex @CustomClass">
    @ChildContent
</div>

@code
{
    private SettingsState SettingsState => GetState<SettingsState>();
        
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string CustomClass {get; set;}
}