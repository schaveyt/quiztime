@using BlazorState
@inherits BlazorStateComponent
@using QuizTime.Features.Settings
@using QuizTime.Features.Game

<Header CustomClass="flex flex-col items-center">
    <div>
        <h1 class="font-sans text-4xl">Quiz Time!</h1>
    </div>
</Header>

<ContentArea CustomClass="flex flex-row justify-center items-center">
    <div class="text-@(SettingsState.ThemeColorString)-500 flex flex-col cursor-pointer hover:text-@(SettingsState.ThemeColorString)-500" @onclick="OnClickPlay">
        <div>
            <svg class="w-60 h-60 stroke-current" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>
        <span class="text-center text-4xl">Play!</span>
    </div>
</ContentArea>

<Footer />

@code
{
    private GameState GameState => GetState<GameState>();
    private SettingsState SettingsState => GetState<SettingsState>();


    private void OnClickPlay()
    {
        Mediator.Send(new GameState.UpdateGameModeAction { Value = GameMode.Play });
    }
}