@using BlazorState
@inherits SettingsStateComponentBase
@using QuizTime.Features.Settings
@using QuizTime.Features.Game 
@using QuizTime.Shared.UI.Composite
@using QuizTime.Shared.UI.Element
@using Shared.UI

<Header Title="Start" ShowClose="false" />

<ContentArea CustomClass="flex flex-col justify-center items-center space-y-12">
    <PlayButton OnClick="OnClickNewGame" Text="Play!" Size="Size.Large"/>
    <MainButton Text="Add Players" OnClick="OnClickNewGame"/>
</ContentArea>

<Footer />

@code
{
    private GameState GameState => GetState<GameState>();

    private void OnClickNewGame()
    {
        Mediator.Send(new GameState.UpdateGameModeAction { Value = GameMode.NewGame });
    }

    private void OnClickAddPlayers()
    {
        Mediator.Send(new GameState.UpdateGameModeAction { Value = GameMode.AddPlayers });
    }
}