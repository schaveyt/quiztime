@page "/admin"
@using QuizTime.Shared.UI
@using QuizTime.Shared.UI.Composite


<MainContainer>
    <Header Title="Admin" ShowCloseButton="true" OnClose="OnCloseHandler" />
    <ContentArea CustomClass="flex-grow flex flex-row bg-gray-200 text-gray-700">
        <AdminSidebar/>
        <AdminMainContent/>
    </ContentArea>
    <Footer />
</MainContainer>

@code
{
    [Inject]
    NavigationManager NavManager { get; set; }

    protected void OnCloseHandler()
    {
        NavManager.NavigateTo("/");
    }
}